<div class="filter-buttons">
    <button class="filter-btn" @onclick="FiltrarPorPreco">Filtrar por Preço</button>
    <button class="filter-btn" @onclick="FiltrarPorDisponibilidade">Filtrar por Disponibilidade</button>
</div>

@code {

    [Parameter]
    public List<Produto> Produtos { get; set; } = new List<Produto>();

    [Parameter]
    public EventCallback<string> OnFiltroSelected { get; set; }

    private async Task FiltrarPorPreco()
    {
        await OnFiltroSelected.InvokeAsync("preco");
    }

    private async Task FiltrarPorDisponibilidade()
    {
        await OnFiltroSelected.InvokeAsync("disponibilidade");
    }
}
