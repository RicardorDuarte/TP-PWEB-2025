@page "/produtos/details"

@attribute [Authorize(Roles = "Administrador, Funcionario")]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@using GestaoLoja.Data
@using Microsoft.AspNetCore.Identity

@inject IDbContextFactory<GestaoLoja.Data.ApplicationDbContext> DbFactory
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager

<PageTitle>Detalhes</PageTitle>

<h1>Detalhe do produto</h1>

<div>
    <h4>Produto</h4>
    <hr />
    @if (produto is null)
    {
        <p><em>Carregando...</em></p>
    }
    else
    {
        string MaisVende = produto.MaisVendido ? "Sim" : "Não";
        string EstaDisp = produto.Disponivel ? "Sim" : "Não";
        string EstadoProduto = produto.Ativo ? "Ativo" : "Inativo";

        <dl class="row">
            <dd class="col-12 mb-3">
                @if (produto.Imagem != null && produto.Imagem.Length > 0)
                {
                    <img title="@produto.Nome" id="imagePreview" class="img-thumbnail mt-2" 
                         src="data:image/*;base64,@(Convert.ToBase64String(produto.Imagem))" style="width:200px">
                }
                else
                {
                    <img src="/img/noproductstrans.png" class="img-thumbnail mt-2" style="width:200px" alt="Sem imagem">
                }
            </dd>

            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@produto.Nome</dd>
            
            <dt class="col-sm-2">Detalhe</dt>
            <dd class="col-sm-10">@produto.Detalhe</dd>
            
            <dt class="col-sm-2">Fornecedor</dt>
            <dd class="col-sm-10">@((produto.Fornecedor is not null ? (string.IsNullOrWhiteSpace(produto.Fornecedor.Nome) ? produto.Fornecedor.Email : produto.Fornecedor.Nome) : "Sem fornecedor"))</dd>
            
            <dt class="col-sm-2">Preço Base</dt>
            <dd class="col-sm-10">@produto.PrecoBase.ToString("C")</dd>

            <dt class="col-sm-2">Percentagem Lucro</dt>
            <dd class="col-sm-10">@produto.PercentagemLucro%</dd>

            <dt class="col-sm-2">Preço Final</dt>
            <dd class="col-sm-10">
                @produto.Preco.ToString("C")
                @if (produto.modoentrega != null)
                {
                    <text> / @produto.modoentrega.Nome</text>
                }
            </dd>
            
            <dt class="col-sm-2">Estado</dt>
            <dd class="col-sm-10">
                <span class="badge @(produto.Ativo ? "bg-success" : "bg-warning")">@EstadoProduto</span>
            </dd>
            
            <dt class="col-sm-2">Mais Vendido</dt>
            <dd class="col-sm-10">@MaisVende</dd>
            
            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@produto.Stock</dd>
            
            <dt class="col-sm-2">Disponível</dt>
            <dd class="col-sm-10">@EstaDisp</dd>
            
            <dt class="col-sm-2">Modo Entrega</dt>
            <dd class="col-sm-10">@(produto.modoentrega?.Nome ?? "Não especificado")</dd>
            
            <dt class="col-sm-2">Categoria</dt>
            <dd class="col-sm-10">@(produto.categoria?.Nome ?? "Não especificado")</dd>
            
            @if (!string.IsNullOrEmpty(produto.Origem))
            {
                <dt class="col-sm-2">Origem</dt>
                <dd class="col-sm-10">@produto.Origem</dd>
            }
        </dl>
        
        <div class="mt-3">
            <a href="@($"/produtos/edit?id={produto.Id}")" class="btn btn-primary">
                <img title="Editar" src="/img/editicon.png" style="height:30px" /> Editar
            </a>
            <a href="/produtos" class="btn btn-outline-secondary">
                <img title="Recuar" src="/img/backicon.png" style="height:30px" /> Voltar
            </a>
        </div>
    }
</div>

@code {
    Produto? produto;
    string? fornecedorNome;
    string? fornecedorEmail;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        produto = await context.Produtos.Include("categoria").Include("modoentrega").Include("Fornecedor")
        .FirstOrDefaultAsync(m => m.Id == Id);

        if (produto is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        if (!string.IsNullOrEmpty(produto.FornecedorId))
        {
            var fornecedor = await UserManager.FindByIdAsync(produto.FornecedorId);
            if (fornecedor != null)
            {
                fornecedorNome = fornecedor.Nome;
                fornecedorEmail = fornecedor.Email;
            }
        }
    }
}
