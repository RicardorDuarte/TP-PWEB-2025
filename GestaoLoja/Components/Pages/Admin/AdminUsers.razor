@page "/admin/users"

@rendermode InteractiveServer

@attribute [Authorize(Roles = "Administrador")]

@using GestaoLoja.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore

@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject IDbContextFactory<ApplicationDbContext> DbFactory

<PageTitle>Gestão de Utilizadores e Roles</PageTitle>

<h3>Gestão de Utilizadores e Roles</h3>

@if (!string.IsNullOrEmpty(mensagem))
{
    <div class="alert @(mensagem.Contains("sucesso") ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @mensagem
        <button type="button" class="btn-close" @onclick="() => mensagem = string.Empty"></button>
    </div>
}

@if (users == null)
{
    <p><em>A carregar utilizadores...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Email</th>
                    <th>Nome</th>
                    <th>Apelido</th>
                    <th>NIF</th>
                    <th>Estado</th>
                    <th>Roles Atribuídas</th>
                    <th>Adicionar Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.Nome</td>
                        <td>@user.Apelido</td>
                        <td>@user.NIF</td>
                        <td>
                            <span class="badge @(user.Estado == "Ativo" ? "bg-success" : "bg-secondary")">
                                @(user.Estado ?? "N/A")
                            </span>
                        </td>
                        <td>
                            @if (userWithRoles.ContainsKey(user.Id))
                            {
                                @foreach (var role in userWithRoles[user.Id])
                                {
                                    <span class="badge bg-info me-1">
                                        @role
                                        <button type="button" class="btn-close btn-close-white btn-sm ms-1" 
                                                @onclick="async () => await RemoverRole(user.Id, role)"
                                                title="Remover role"
                                                style="font-size: 0.6rem; vertical-align: middle;">
                                        </button>
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted"><em>Nenhuma role</em></span>
                            }
                        </td>
                        <td>
                            <div class="input-group input-group-sm">
                                <select class="form-select form-select-sm" 
                                        @bind="selectedRoles[user.Id]">
                                    <option value="">Selecione...</option>
                                    @foreach (var role in availableRoles)
                                    {
                                        @if (!userWithRoles.ContainsKey(user.Id) || !userWithRoles[user.Id].Contains(role.Name ?? ""))
                                        {
                                            <option value="@role.Name">@role.Name</option>
                                        }
                                    }
                                </select>
                                <button class="btn btn-primary btn-sm" 
                                        @onclick="async () => await AdicionarRole(user.Id)"
                                        disabled="@(string.IsNullOrEmpty(selectedRoles.GetValueOrDefault(user.Id)))">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <strong>Total de utilizadores:</strong> @users.Count
    </div>
}

@code {
    List<ApplicationUser>? users;
    List<IdentityRole> availableRoles = new();
    Dictionary<string, List<string>> userWithRoles = new();
    Dictionary<string, string> selectedRoles = new();
    string mensagem = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    protected async Task CarregarDados()
    {
        using var context = DbFactory.CreateDbContext();
        
        // Carregar utilizadores
        users = await context.Users
            .OrderBy(u => u.Email)
            .ToListAsync();

        // Carregar roles disponíveis
        availableRoles = await RoleManager.Roles
            .OrderBy(r => r.Name)
            .ToListAsync();

        // Carregar roles de cada utilizador
        userWithRoles.Clear();
        selectedRoles.Clear();

        foreach (var user in users)
        {
            var roles = await UserManager.GetRolesAsync(user);
            userWithRoles[user.Id] = roles.ToList();
            selectedRoles[user.Id] = string.Empty;
        }
    }

    protected async Task AdicionarRole(string userId)
    {
        mensagem = string.Empty;

        if (string.IsNullOrEmpty(userId) || !selectedRoles.ContainsKey(userId) || string.IsNullOrEmpty(selectedRoles[userId]))
        {
            mensagem = "Selecione uma role para adicionar.";
            return;
        }

        try
        {
            var user = await UserManager.FindByIdAsync(userId);
            if (user == null)
            {
                mensagem = "Utilizador não encontrado.";
                return;
            }

            string roleToAdd = selectedRoles[userId];

            // Verificar se a role existe
            if (!await RoleManager.RoleExistsAsync(roleToAdd))
            {
                mensagem = $"A role '{roleToAdd}' não existe.";
                return;
            }

            // Verificar se o utilizador já tem esta role
            if (await UserManager.IsInRoleAsync(user, roleToAdd))
            {
                mensagem = $"O utilizador já possui a role '{roleToAdd}'.";
                return;
            }

            var result = await UserManager.AddToRoleAsync(user, roleToAdd);

            if (result.Succeeded)
            {
                // Atualizar o campo Role no ApplicationUser (se existir)
                using var context = DbFactory.CreateDbContext();
                var userToUpdate = await context.Users.FindAsync(userId);
                if (userToUpdate != null)
                {
                    userToUpdate.Role = roleToAdd;
                    await context.SaveChangesAsync();
                }

                mensagem = $"✓ Role '{roleToAdd}' adicionada com sucesso ao utilizador {user.Email}!";
                await CarregarDados();
            }
            else
            {
                mensagem = $"Erro ao adicionar role: {string.Join(", ", result.Errors.Select(e => e.Description))}";
            }
        }
        catch (Exception ex)
        {
            mensagem = $"Erro inesperado: {ex.Message}";
        }
    }

    protected async Task RemoverRole(string userId, string roleName)
    {
        mensagem = string.Empty;

        if (string.IsNullOrEmpty(userId) || string.IsNullOrEmpty(roleName))
        {
            mensagem = "Dados inválidos.";
            return;
        }

        // Prevenir remoção da role Administrador do último admin
        if (roleName == "Administrador")
        {
                mensagem = "Não é possível remover a role de Administrador";
                return;
            
        }

        try
        {
            var user = await UserManager.FindByIdAsync(userId);
            if (user == null)
            {
                mensagem = "Utilizador não encontrado.";
                return;
            }

            var result = await UserManager.RemoveFromRoleAsync(user, roleName);

            if (result.Succeeded)
            {
                // Atualizar o campo Role no ApplicationUser
                using var context = DbFactory.CreateDbContext();
                var userToUpdate = await context.Users.FindAsync(userId);
                if (userToUpdate != null)
                {
                    var remainingRoles = await UserManager.GetRolesAsync(user);
                    userToUpdate.Role = remainingRoles.FirstOrDefault();
                    await context.SaveChangesAsync();
                }

                mensagem = $"✓ Role '{roleName}' removida com sucesso do utilizador {user.Email}!";
                await CarregarDados();
            }
            else
            {
                mensagem = $"Erro ao remover role: {string.Join(", ", result.Errors.Select(e => e.Description))}";
            }
        }
        catch (Exception ex)
        {
            mensagem = $"Erro inesperado: {ex.Message}";
        }
    }
}