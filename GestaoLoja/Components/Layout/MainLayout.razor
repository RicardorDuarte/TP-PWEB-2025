@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<div class="page">
    <AuthorizeView>
        <Authorized>
            <div class="sidebar">
                <NavMenu />
            </div>
        </Authorized>
        <NotAuthorized>
            <!-- Caso deseje exibir algo para usuários não autenticados, pode adicionar aqui -->
        </NotAuthorized>
    </AuthorizeView>

    <main>
        <div class="top-row px-4">

            <AuthorizeView>
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="Account/Manage">
                            <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name      
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <form action="Account/Logout" method="post" onsubmit="handleLogout(event)">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                            <button type="submit" class="nav-link">
                                <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="nav-login">
                        <NavLink class="nav-link" href="Account/Login">
                            <img src="img/icoperfil.png" />
                            <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Login 
                        </NavLink>
                    </div>
                    <div class="nav-login">
                        <NavLink class="nav-link" href="Account/Register">
                            <img src="img/register.png" />
                            <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Registar
                        </NavLink>
                    </div>

                </NotAuthorized>
            </AuthorizeView>

            <div class="nav-login">
                <NavLink class="nav-link" href="sobre">
                    <img src="img/about.png" style="width:15px;" />
                    <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span>Sobre ...
                </NavLink>
            </div>

        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    Ocorreu um erro não previsto!
    <a href="" class="reload">Recarregar os dados</a>
    <a class="dismiss">🗙</a>
</div>

<script>
    function handleLogout(event) {
        event.preventDefault();  

        fetch('/Account/Logout', {
            method: 'POST',
            body: new FormData(event.target)
        }).then(response => {
            window.location.href = "/";
        }).catch(error => {
            console.error("Erro ao fazer logout:", error);
        });
    }
</script>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
